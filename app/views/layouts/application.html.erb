<!DOCTYPE html>
<html>
<head>
  <title>J's Jewels Online Store</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller.controller_name %>">

<div id="banner">
  <%= image_tag("J_logo.png") %>
  <%= @page_title || "J's Jewels" %>
</div>
<div id="columns">
  <div id="side">
    <% if @cart %>
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>
    <% end %>
    
    <ul>
      <li><%= link_to  "Home", store_url %></li>
      <li><%= link_to "Questions", pages_faq_path %></li>
      <li><%= link_to "News", pages_news_path %></li>
      <li><%= link_to "Contact", pages_contact_path %></li>
    </ul>
  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
